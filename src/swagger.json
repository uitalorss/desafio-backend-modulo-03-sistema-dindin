  "paths": {
    "/usuario": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Criação de usuário",
        "description": "Esse serviço cadastra um novo usuário no sistema.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "senha": "string"
                }
              },
              "example": {
                "nome": "José",
                "email": "jose@email.com",
                "senha": "123456"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "nome": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": 1,
                    "nome": "José",
                    "email": "jose@email.com"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já existente no banco de dados",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "Já existe usuário cadastrado com o e-mail informado."
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Usuário"],
        "summary": "Detalhar usuário",
        "description": "Esse serviço permite ao usuário visualizar os seus dados cadastrados",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "nome": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": 2,
                    "nome": "José",
                    "email": "jose@email.com"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Usuário"],
        "summary": "Atualizar usuário",
        "description": "Esse serviço permite ao usuário logado atualizar os seus dados cadastrados.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "senha": "string"
                }
              },
              "example": {
                "nome": "José",
                "email": "jose@email.com",
                "senha": "123456"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Sucesso"
          },
          "400": {
            "description": "Email já existente no banco de dados",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": " e-mail informado já está sendo utilizado por outro usuário."
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Login de usuário",
        "description": "Esse serviço permite a um usuário cadastrado logar no sistema para usufruir dos serviços disponíveis.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "senha": "string"
                }
              },
              "example": {
                "email": "jose@email.com",
                "senha": "123456"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário logado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "usuario": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "nome": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "usuario": {
                      "id": 1,
                      "nome": "José",
                      "email": "jose@email.com"
                    },
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MiwiaWF0IjoxNjIzMjQ5NjIxLCJleHAiOjE2MjMyNzg0MjF9.KLR9t7m_JQJfpuRv9_8H2-XJ92TSjKhGPxJXVfX6wBI"
                  }
                }
              }
            }
          },
          "400": {
            "description": "email ou senha inválidos",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "email e/ou senha inválidos."
                }
              }
            }
          }
        }
      }
    },
    "/categoria": {
      "get": {
        "tags": ["Categoria"],
        "summary": "Listagem de categorias",
        "description": "Esse serviço lista para o usuário todas as categorias disponíveis na API.",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "descricao": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": 1,
                      "descricao": "Roupas"
                    },
                    {
                      "id": 2,
                      "descricao": "Mercado"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/transacao": {
      "post": {
        "tags": ["Transação"],
        "summary": "Cadastro de Transações",
        "description": "Esse serviço permite ao usuário cadastrar uma transação na aplicação",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tipo": {
                    "type": "string"
                  },
                  "descricao": {
                    "type": "string"
                  },
                  "valor": {
                    "type": "number"
                  },
                  "data": {
                    "type": "timestamp"
                  },
                  "categoria_id": {
                    "type": "number"
                  }
                },
                "example": {
                  "tipo": "entrada",
                  "descricao": "Salário",
                  "valor": 300000,
                  "data": "2022-03-24T15:30:00.000Z",
                  "categoria_id": 6
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "tipo": {
                      "type": "string"
                    },
                    "descricao": {
                      "type": "string"
                    },
                    "valor": {
                      "type": "number"
                    },
                    "data": {
                      "type": "timestamp"
                    },
                    "usuario_id": {
                      "type": "number"
                    },
                    "categoria_id": {
                      "type": "number"
                    },
                    "categoria_nome": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": 3,
                  "tipo": "entrada",
                  "descricao": "Salário",
                  "valor": 300000,
                  "data": "2022-03-24T15:30:00.000Z",
                  "usuario_id": 5,
                  "categoria_id": 6,
                  "categoria_nome": "Salários"
                }
              }
            }
          },
          "400": {
            "description": "",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "Todos os campos obrigatórios devem ser informados."
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Transação"],
        "summary": "Listar transações",
        "description": "Esse serviço lista todas as transações de um usuário.",
        "responses": {
          "description": "Sucesso",
          "content": {
            "application/json": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "number"
                  },
                  "tipo": {
                    "type": "string"
                  },
                  "descricao": {
                    "type": "string"
                  },
                  "valor": {
                    "type": "number"
                  },
                  "data": {
                    "type": "timestamp"
                  },
                  "usuario_id": {
                    "type": "number"
                  },
                  "categoria_id": {
                    "type": "number"
                  },
                  "categoria_nome": {
                    "type": "string"
                  }
                }
              },
              "example": [
                {
                  "id": 1,
                  "tipo": "saida",
                  "descricao": "Sapato amarelo",
                  "valor": 15800,
                  "data": "2022-03-23T15:35:00.000Z",
                  "usuario_id": 5,
                  "categoria_id": 4,
                  "categoria_nome": "Roupas"
                },
                {
                  "id": 3,
                  "tipo": "entrada",
                  "descricao": "Salário",
                  "valor": 300000,
                  "data": "2022-03-24T15:30:00.000Z",
                  "usuario_id": 5,
                  "categoria_id": 6,
                  "categoria_nome": "Salários"
                }
              ]
            }
          }
        }
      }
    },
    "/transacao/{id}": {
      "get": {
        "tags": ["Transação"],
        "summary": "Detalhar uma categoria",
        "description": "Esse serviço recebe um identificador pela rota da aplicação e retorna a transação referente àquele identificador.",
        "parameters": [
          {
            "in": "path",
            "name": "transacaoId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "identificador da transação"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "tipo": {
                      "type": "string"
                    },
                    "descricao": {
                      "type": "string"
                    },
                    "valor": {
                      "type": "number"
                    },
                    "data": {
                      "type": "timestamp"
                    },
                    "usuario_id": {
                      "type": "number"
                    },
                    "categoria_id": {
                      "type": "number"
                    },
                    "categoria_nome": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": 3,
                  "tipo": "entrada",
                  "descricao": "Salário",
                  "valor": 300000,
                  "data": "2022-03-24T15:30:00.000Z",
                  "usuario_id": 5,
                  "categoria_id": 6,
                  "categoria_nome": "Salários"
                }
              }
            }
          },
          "404": {
            "description": "Não encontrado",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "Transação não encontrada."
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Transação"],
        "summary": "Atualizar uma transação",
        "description": "Esse serviço recebe um identificador pela rota da aplicação e no seu corpo os itens são descritos para ser atualizados no servidor.",
        "parameters": [
          {
            "in": "path",
            "name": "transacaoId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "identificador da transação"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tipo": {
                    "type": "string"
                  },
                  "descricao": {
                    "type": "string"
                  },
                  "valor": {
                    "type": "number"
                  },
                  "data": {
                    "type": "timestamp"
                  },
                  "categoria_id": {
                    "type": "number"
                  }
                },
                "example": {
                  "tipo": "entrada",
                  "descricao": "Salário",
                  "valor": 300000,
                  "data": "2022-03-24T15:30:00.000Z",
                  "categoria_id": 6
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Sucesso"
          },
          "404": {
            "description": "Não encontrado",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "Transação não encontrada."
                }
              }
            }
          },
          "400": {
            "description": "Campo não preenchido.",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "Esse campo é obrigatório."
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Transação"],
        "summary": "Excluir uma transação",
        "description": "Esse serviço recebe um identificador pela rota da aplicação e, caso o seu identificador seja válido, a transação é excluída.",
        "parameters": [
          {
            "in": "path",
            "name": "transacaoId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "identificador da transação"
          }
        ],
        "responses": {
          "204": {
            "description": "Sucesso"
          },
          "404": {
            "description": "Não encontrado",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "Transação não encontrada."
                }
              }
            }
          }
        }
      }
    }
  }
}
